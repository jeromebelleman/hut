'''
A Kibana dashboard template tool
'''

import os
import sys
import argparse
import json

from mako.template import Template

def main():
    '''
    Main function
    '''

    # Check Arguments
    parser = argparse.ArgumentParser(description="A dashboard template tool.")
    parser.add_argument('directory', metavar='DIRECTORY',
                        help="dashboard template directory")
    parser.add_argument('output', metavar='OUTPUT', help="output file")
    parser.add_argument('-f', '--force', action='store_true',
                        help="write JSON file even if invalid")
    args = parser.parse_args()
        
    # Load JSON template
    try:
        template = Template(filename=args.directory + '/template.json')
        cwd = os.getcwd()
        os.chdir(args.directory)
        body = template.render()
        os.chdir(cwd)
    except IOError, exc:
        print >> sys.stderr, exc
        return 1

    # Check JSON validity
    try:
        json.loads(body)
    except ValueError, exc:
        print >> sys.stderr, exc
        if not args.force:
            return 1

    # Write output file
    try:
        with open(args.output, 'w') as fhl:
            fhl.write(body)
    except IOError, exc:
        print >> sys.stderr, exc
        return 1

if __name__ == '__main__':
    sys.exit(main())
